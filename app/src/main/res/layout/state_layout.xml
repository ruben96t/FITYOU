<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartHS"
        android:layout_width="match_parent"
        android:layout_height="302dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIMC"
        app:srcCompat="@drawable/imcgraph" />

    <TextView
        android:id="@+id/textViewIMC"
        android:layout_width="346dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="IMC"
        app:layout_constraintTop_toBottomOf="@+id/textViewTarget"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Pesas:"
        app:layout_constraintTop_toBottomOf="@+id/chartHS"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewTarget"
        android:layout_width="346dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="Te queda X para cumplir tu objetivo"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeight"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>